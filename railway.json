{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "web",
      "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT"
    },
    {
      "name": "agent",
      "startCommand": "python prediction_agent.py"
    }
  ]
}